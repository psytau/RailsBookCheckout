<h1>Users</h1>
<table class="table">
  <thead>
    <tr>
      <td> email </td>
      <td> is admin </td>
      <td> can review books </td>
      <td> can rate books </td>
    </tr>
  </thead>
<% @users.each do |u| %>
  <tr id="user-row-<%= u.id %>">
    <td>
      <%= u.email %>
    </td>
    <td>
      <%= render 'make_can_do_checkbox', user: u, can_do_it: u.is_admin?, it: :admin %>
    </td>
    <td>
      <%= render 'make_can_do_checkbox', user: u, can_do_it: !u.banned_from_reviewing, it: :review %>
    </td>
    <td>
      <%= render 'make_can_do_checkbox', user: u, can_do_it: !u.banned_from_rating, it: :rate %>
    </td>
    <td>
      <a href='/admin/view_as_user/<%= u.id %>'> become user </a>
    </td>
  </tr>
<% end %>
</table>
